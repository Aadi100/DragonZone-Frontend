@page
@model addemployeeModel
@{
    ViewData["Title"] = "Error";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <meta name="description" content="POS - Bootstrap Admin Template">
    <meta name="keywords" content="admin, estimates, bootstrap, business, corporate, creative, invoice, html5, responsive, Projects">
    <meta name="author" content="Dreamguys - Bootstrap Admin Template">
    <meta name="robots" content="noindex, nofollow">
    <title>Dreams Pos admin template</title>

    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.jpg">

    <link rel="stylesheet" href="assets/css/bootstrap.min.css">

    <link rel="stylesheet" href="assets/css/animate.css">

    <link rel="stylesheet" href="assets/plugins/select2/css/select2.min.css">

    <link rel="stylesheet" href="assets/css/dataTables.bootstrap4.min.css">

    <link rel="stylesheet" href="assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="assets/plugins/fontawesome/css/all.min.css">

    <link rel="stylesheet" href="assets/css/style.css">
</head>
<body>
    <div id="global-loader">
        <div class="whirly-loader"> </div>
    </div>

    <div class="main-wrapper">
        <div class="page-wrapper">
            <div class="content">
                <div class="page-header">
                    <div class="page-title">
                        <h4>User Management</h4>
                        <h6>Add/Update User</h6>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <form method="post">
                            <div class="row">
                                <div class="col-lg-3 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label asp-for="Employee.Name"></label>
                                        <input asp-for="Employee.Name" class="form-control" />
                                        <span asp-validation-for="Employee.Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Employee.Role"></label>
                                        <select asp-for="Employee.Role" class="form-control" asp-items="Model.RoleList"></select>
                                        <span asp-validation-for="Employee.Role" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Employee.Gender"></label>
                                        <input asp-for="Employee.Gender" class="form-control" />
                                        <span asp-validation-for="Employee.Gender" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label asp-for="Employee.Email"></label>
                                        <input asp-for="Employee.Email" class="form-control" />
                                        <span asp-validation-for="Employee.Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Employee.Card_id"></label>
                                        <input asp-for="Employee.Card_id" class="form-control" id="cardUID" readonly />
                                        <input type="hidden" id="hiddenCardId" name="Employee.HiddenCardId" /> <!-- Hidden field to hold id -->
                                        <span asp-validation-for="Employee.Card_id" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                     <label asp-for="Employee.Organization"></label>
                                        <select asp-for="Employee.Organization" class="form-control" asp-items="Model.OrganizationList" id="EMP_Organization">
                                     <option value="">Select an Organization</option>
                                     </select>
                                     <span asp-validation-for="Employee.Organization" class="text-danger"></span>
                                     </div>
                                </div>
                                <div class="col-lg-3 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label asp-for="Employee.Password"></label>
                                        <input asp-for="Employee.Password" class="form-control" />
                                        <span asp-validation-for="Employee.Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Employee.Mobile"></label>
                                        <input asp-for="Employee.Mobile" class="form-control" />
                                        <span asp-validation-for="Employee.Mobile" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Employee.Manager"></label>
                                        <select asp-for="Employee.Manager" class="form-control" asp-items="Model.ManagerList"></select>
                                        <span asp-validation-for="Employee.Manager" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label asp-for="Employee.NIC"></label>
                                        <input asp-for="Employee.NIC" class="form-control" />
                                        <span asp-validation-for="Employee.NIC" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Employee.City"></label>
                                        <input asp-for="Employee.City" class="form-control" />
                                        <span asp-validation-for="Employee.City" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Employee.Branch"></label>
                                        <select asp-for="Employee.Branch" class="form-control" id="EMP_Branch">
                                            <option value="">Select a branch</option>
                                        </select>
                                        <span asp-validation-for="Employee.Branch" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label> Employee Image</label>
                                        <div class="image-upload">
                                            <input type="file">
                                            <div class="image-uploads">
                                                <img src="assets/img/icons/upload.svg" alt="img">
                                                <h4>Drag and drop a file to upload</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <button type="submit" class="btn btn-submit me-2">Submit</button>
                                    <a asp-page="/productlist" class="btn btn-cancel">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script>

        console.log("Serial Data: id="cardUID" );
    </script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#EMP_Organization').change(function () {
                var selectedOrganizationId = $(this).val();

                if (selectedOrganizationId) {
                    $.ajax({
                        url: '/addemployee?handler=Branches',
                        type: 'GET',
                        data: { organizationId: selectedOrganizationId },
                        success: function (data) {
                            var branchSelect = $('#EMP_Branch');
                            branchSelect.empty(); 
                            branchSelect.append($('<option>').val('').text('Select a branch')); 

                            $.each(data, function (index, branch) {
                                branchSelect.append($('<option>').val(branch.value).text(branch.text));
                            });
                        },
                        error: function () {
                            alert('Failed to load branches.');
                        }
                    });
                } else {

                    $('#EMP_Branch').empty().append($('<option>').val('').text('Select a branch'));
                }
            });
        });

    </script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>



    <script>
        $(document).ready(function () {
            function fetchCardUID() {
                $.ajax({
                    url: '/addemployee?handler=ReceiveAndFetchCards',
                    type: 'GET',
                    success: function (data) {
                        if (data.card_id) { 
                            $('#cardUID').val(data.card_id);
                            $('#hiddenCardId').val(data.id);
                        }
                    },
                    error: function () {
                        console.log("Error fetching data.");
                    }
                });
            }

            setInterval(fetchCardUID, 100);
        });
    </script>

    <script src="assets/js/jquery-3.6.0.min.js"></script>

    <script src="assets/js/feather.min.js"></script>

    <script src="assets/js/jquery.slimscroll.min.js"></script>

    <script src="assets/js/jquery.dataTables.min.js"></script>
    <script src="assets/js/dataTables.bootstrap4.min.js"></script>

    <script src="assets/js/bootstrap.bundle.min.js"></script>

    <script src="assets/plugins/select2/js/select2.min.js"></script>

    <script src="assets/plugins/sweetalert/sweetalert2.all.min.js"></script>
    <script src="assets/plugins/sweetalert/sweetalerts.min.js"></script>

    <script src="assets/js/script.js"></script>
</body>