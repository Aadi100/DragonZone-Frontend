    <div class="main-wrapper">
        <div class="page-wrapper">
            <div class="content">
                <div class="page-header">
                    <div class="page-title">
                        <h4>Add Game</h4>
                        <h6>Create new game</h6>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <form method="post">
                            <div class="row">
                                <div class="col-lg-3 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label asp-for="Game.Name"></label>
                                        <input asp-for="Game.Name" class="form-control" />
                                        <span asp-validation-for="Game.Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Game.Organization"></label>
                                        <select asp-for="Game.Organization" class="form-control" asp-items="Model.OrganizationList" id="GM_Organization">
                                            <option value="">Select an Organization</option>
                                        </select>
                                        <span asp-validation-for="Game.Organization" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label asp-for="Game.Type"></label>
                                        <input asp-for="Game.Type" class="form-control" />
                                        <span asp-validation-for="Game.Type" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Game.Branch"></label>
                                        <select asp-for="Game.Branch" class="form-control" id="GM_Branch">
                                            <option value="">Select a branch</option>
                                        </select>
                                        <span asp-validation-for="Game.Branch" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label asp-for="Game.GameLevel"></label>
                                        <input asp-for="Game.GameLevel" class="form-control" />
                                        <span asp-validation-for="Game.GameLevel" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Game.UnitStatus"></label>
                                        <input asp-for="Game.UnitStatus" class="form-control" />
                                        <span asp-validation-for="Game.UnitStatus" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label asp-for="Game.Cost"></label>
                                        <input asp-for="Game.Cost" class="form-control" />
                                        <span asp-validation-for="Game.Cost" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <button type="submit" class="btn btn-submit me-2">Submit</button>
                                    <a asp-page="/productlist" class="btn btn-cancel">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#GM_Organization').change(function () {
                var selectedOrganizationId = $(this).val();

                if (selectedOrganizationId) {
                    $.ajax({
                        url: '/addgame?handler=Branches',
                        type: 'GET',
                        data: { organizationId: selectedOrganizationId },
                        success: function (data) {
                            var branchSelect = $('#GM_Branch');
                            branchSelect.empty(); // Clear existing options
                            branchSelect.append($('<option>').val('').text('Select a branch')); // Default option

                            $.each(data, function (index, branch) {
                                branchSelect.append($('<option>').val(branch.value).text(branch.text));
                            });
                        },
                        error: function () {
                            alert('Failed to load branches.');
                        }
                    });
                } else {
                    // Clear branches if no organization is selected
                    $('#GM_Branch').empty().append($('<option>').val('').text('Select a branch'));
                }
            });
        });

    </script>


    <script src="assets/js/jquery-3.6.0.min.js"></script>

